 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="lableClass">*Full Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Student Full Name" required >
        
            <label for="Email" class="lableClass">*Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com" required >
        </div>

        <div class="form-group">
            <label for="Course" class="lableClass">*Course</label>
            <input type="text" name="course" value="" placeholder="(Eg : Information Technology)" required >
        
            <label for="currentcourseYear" class="lableClass">*Current-Course-Year</label>
            <input type="text" name="currentcourseYear" value="" placeholder="3" required >
        </div>

        <div class="form-group">
            <label for="seatNumber" class="lableClass">*Seat number</label>
            <input type="text" name="seatNumber" value="" placeholder="--- ---- ---" required >
        
            <label for="gender" class="lableClass">*Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male">
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female">
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="dob" class="lableClass">*Date Of Birth</label>
            <input type="date" name="dob"  value="" placeholder="--/--/----" required >
        
            <label for="phoneNumber" class="lableClass">*Phone Number</label>
            <input type="text" name="phoneNumber" value="" placeholder="Phone no." required >
        </div>
        <div class="form-group">
            <label for="Address" class="lableClass">*Address</label>
            <input type="text" name="Address" value="" placeholder="Address...(eg: Pune, Pimpri , etc)" required >
        </div>
        <div class="form-group">
            <label for="Percentage" class="lableClass">*Percentage</label>
            <input type="text" name="Percentage" value="" placeholder="100 (without ' % ')" required >
        </div>
        <div class="form-group">
            <label for="AdmissionType" class="lableClass">*Admission Type</label>
            <select name="AdmissionType" id="AdmissionType" required >
                <option value="" selected disabled>Select Admission Type</option>
                <option value="govQuota(cap)">govQuota(cap)</option>
                <option value="TFWS">TFWS</option>
                <option value="Management">Management</option>
            </select>
        
            <label for="Category" class="lableClass">*Category</label>
            <select name="Category" id="Category" required >
                <option value="" selected disabled>Select Category</option>
                <option value="General">General</option>
                <option value="OBC">OBC</option>
                <option value="SC/ST">SC/ST</option>
                <option value="NT">NT</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn CreateNewBtn">Add New Data</button>
        </div>

    </div>
</form>