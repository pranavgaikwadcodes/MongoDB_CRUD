
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->


<!-- Toast message -->

    <div class="toast-wrap">
        
        <div class="toast" id="toast">
            <div class="container-1">
                <i id="icon-block" class="fa-regular fa-circle-check"></i>
            </div>
            <div class="container-2">
                <p id="status-block">Success</p>
                <p id="message-block">Data inserted in database</p>
            </div>
            <button id="close-toast" onclick="closeToast()">
                &times;
            </button>
        </div>

    </div>
<!-- /Toast message -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Seat number</th>
                            <th>Course & Year</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %> 
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->