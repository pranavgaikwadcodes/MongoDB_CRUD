<%- include('_header') %>

        <div class="content">
            <div class="Title" style="margin-bottom: 50px;">
                Update Record
                <div class="message" id="message">
                    <p id="status-block">Data Updated Sucessfully</p>
                    <button id="close-toast" onclick="closeToast()">
                        &times;
                    </button>
                </div>
            </div>

            <!-- form handling -->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="lableClass">*Full Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.name %>" placeholder="Student Full Name" required >
                    
                        <label for="Email" class="lableClass">*Email</label>
                        <input type="text" name="email" value="<%= user.email %>" placeholder="example@gmail.com" required >
                    </div>

                    <div class="form-group">
                        <label for="Course" class="lableClass">*Course</label>
                        <input type="text" name="course" value="<%= user.course %>" placeholder="(Eg : Information Technology)" required >
                    
                        <label for="currentcourseYear" class="lableClass">*Current-Course-Year</label>
                        <input type="text" name="currentcourseYear" value="<%= user.currentcourseYear %>" placeholder="3" required >
                    </div>

                    <div class="form-group">
                        <label for="seatNumber" class="lableClass">*Seat number</label>
                        <input type="text" name="seatNumber" value="<%= user.seatNumber %>" placeholder="--- ---- ---" required >
                    
                        <label for="gender" class="lableClass">*Gender</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %> >
                            <label for="radio-2" class="radio-label">Male</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="gender" value="Female" <%= user.gender == 'Female' ? 'checked' : '' %>>
                            <label for="radio-3" class="radio-label">Female</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="dob" class="lableClass">*Date Of Birth</label>
                        <input type="date" name="dob" value="<%= user.dob %>" placeholder="--/--/----" required >
                    
                        <label for="phoneNumber" class="lableClass">*Phone Number</label>
                        <input type="text" name="phoneNumber" value="<%= user.phoneNumber %>" placeholder="Phone no." required >
                    </div>
                    <div class="form-group">
                        <label for="Address" class="lableClass">*Address</label>
                        <input type="text" name="Address" value="<%= user.Address %>" placeholder="Address...(eg: Pune, Pimpri , etc)" required >
                    </div>
                    <div class="form-group">
                        <label for="Percentage" class="lableClass">*Percentage</label>
                        <input type="text" name="Percentage" value="<%= user.Percentage %>" placeholder="100 (without ' % ')" required >
                    </div>
                    <div class="form-group">
                        <label for="AdmissionType" class="lableClass">*Admission Type</label>
                        <select name="AdmissionType" id="AdmissionType" required >
                            <option value="<%= user.AdmissionType %>" selected disabled>Select Admission Type</option>
                            <option value="govQuota(cap)">govQuota(cap)</option>
                            <option value="TFWS">TFWS</option>
                            <option value="Management">Management</option>
                        </select>
                    
                        <label for="Category" class="lableClass">*Category</label>
                        <select name="Category" id="Category" required >
                            <option value="<%= user.Category %>" selected disabled>Select Category</option>
                            <option value="General">General</option>
                            <option value="OBC">OBC</option>
                            <option value="SC/ST">SC/ST</option>
                            <option value="NT">NT</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn CreateNewBtn">Update Student's Data</button>
                    </div>

                </div>
            </form>

        </div>

    </div>

<!-- include footer -->
<%- include('../include/_footer') %>
<!-- /include footer -->